rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Obrazy produktów - publiczny dostęp do odczytu, tylko admin może zapisywać
    match /products/{productId}/{allImages=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Profilowe zdjęcia użytkowników - dostęp tylko dla właściciela
    match /users/{userId}/{allImages=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Publiczne zasoby - dostępne do odczytu dla wszystkich
    match /public/{allPublic=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}