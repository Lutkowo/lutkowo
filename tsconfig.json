{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@pinia/nuxt",
      "@nuxtjs/i18n",
      "node"
    ],
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/*.tsx",
    "./**/*.vue",
    "./**/*.json"
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
